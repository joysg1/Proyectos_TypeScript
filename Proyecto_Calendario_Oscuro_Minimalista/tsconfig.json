{
  "compilerOptions": {
    "target": "ES2015",
    "module": "none",
    "lib": ["ES2015", "DOM"],
    "outDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}